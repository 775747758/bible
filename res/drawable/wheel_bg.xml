<?xml version="1.0" encoding="utf-8"?>
<!-- stroke两个wheel中间的间隔  -->
<!-- 下面的item是wheel的左右上下的边界宽度  -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		 <shape android:shape="rectangle">
		<!--  <gradient
				android:startColor="#FFF"
				android:centerColor="#DDD"
				android:endColor="#333"
				android:angle="90" />  -->
				
				<stroke android:width="1dp" android:color="#FF333333" />
		</shape> 
	</item>
	<item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">

		<shape android:shape="rectangle">
			 <gradient
				android:startColor="#FFCCCCCC"
				android:centerColor="#FFFFFFFF"
				android:endColor="#FFCCCCCC"
				android:angle="90" />
		</shape>
	</item>
</layer-list>