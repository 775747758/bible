<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/pop_rounded_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >
    <TextView
        
        android:textColor="#000000"
        android:layout_height="0dp"
    	android:layout_weight="1"
        android:textSize="22dp"
        android:gravity="center"
        android:text="今日经文"
        android:textStyle="bold" 
        android:layout_width="fill_parent"/>
    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_height="0dp"
    	android:layout_weight="1"
    	android:paddingTop="0dp"
        android:gravity="center_horizontal"
        android:id="@+id/pop_taday_scripture"
        android:layout_width="fill_parent"/>
	<FrameLayout
	    android:id="@+id/framelayout"
	    android:layout_marginLeft="20dip"  
        android:layout_marginRight="20dip"  
	    android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:layout_weight="4">
    <LinearLayout
        android:layout_gravity="fill_vertical" 
        android:gravity="center"
        android:background="#CCCCCC"
    	android:layout_width="fill_parent"
   	 	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    	<ImageView 
        android:layout_width="wrap_content"
   	 	android:layout_height="match_parent"
   	 	 android:src="@drawable/border"/>
    <com.guozg.wheelview.views.WheelView
        android:background="#FFFFFF"
       android:id="@+id/wheelLeft"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
    <ImageView 
        android:layout_width="wrap_content"
   	 	android:layout_height="match_parent"
        android:src="@drawable/border"/>
    <com.guozg.wheelview.views.WheelView 
        android:background="#FFFFFF"
       android:id="@+id/wheelCenter"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
    <ImageView 
        android:layout_width="wrap_content"
   	 	android:layout_height="match_parent"
   	 	 android:src="@drawable/border"/>
     <com.guozg.wheelview.views.WheelView
        android:background="#FFFFFF"
       	android:id="@+id/wheelRight"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
    <ImageView 
        android:layout_width="wrap_content"
   	 	android:layout_height="match_parent"
        android:src="@drawable/border"/>
	</LinearLayout>
	<ImageView
	    android:scaleType="fitXY"
	    android:layout_gravity="center_horizontal" 
	    android:src="@drawable/on_wheel"
	    android:layout_width="fill_parent"
   	 	android:layout_height="fill_parent"/>
	</FrameLayout>
	<LinearLayout 
	    android:layout_height="0dp"
    	android:layout_weight="1"
		android:orientation="horizontal"
        android:layout_width="fill_parent">
	<TextView
	    android:clickable="true"
	    android:background="@drawable/pop_left_textview"
	    android:textColor="#000000"
	    android:textSize="20dp"
	    android:gravity="center"
	    android:text="取消"  
	    android:layout_height="fill_parent"
    	android:layout_weight="5"
        android:id="@+id/cancel"
        android:layout_width="0dp"/>
	<TextView
	     android:clickable="true"
	    android:background="@drawable/pop_right_textview"
	    android:textColor="#000000"
	    android:textSize="20dp"
	    android:gravity="center"
	    android:text="确定" 
	    android:layout_height="fill_parent"
    	android:layout_weight="5"
        android:id="@+id/certern"
        android:layout_width="0dp"/>
	</LinearLayout>

</LinearLayout>
