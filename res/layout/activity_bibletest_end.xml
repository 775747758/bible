<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FEFFEF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/title_bar_bibletest_end"/>"
    <TextView
        android:gravity="center_vertical"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:id="@+id/grade"
        android:background="@drawable/button_round_defalt"
        android:layout_marginLeft="20dp" 
        android:layout_marginRight="20dp" 
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
    	android:layout_height="40dp"/>
    <TextView
        android:gravity="center_vertical"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:id="@+id/num"
        android:background="@drawable/button_round_defalt"
        android:layout_marginLeft="20dp" 
        android:layout_marginRight="20dp" 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" 
        android:layout_width="match_parent"
    	android:layout_height="40dp"/>
    
    <TextView
        android:text="  测试中错误的经文如下："
        android:gravity="center_vertical"
        android:textSize="22dp"
        android:textColor="#000000"
        android:background="#00000000"
        android:layout_marginLeft="20dp" 
        android:layout_marginRight="20dp" 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
    	android:layout_height="40dp"/>
    <ListView
        android:cacheColorHint="#00000000" 
        android:listSelector="@android:color/transparent"
        android:id="@+id/bibletest_lv"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
		android:layout_width="match_parent"
        android:background="#FEFFEF"
        android:layout_marginLeft="20dp" 
        android:layout_marginRight="20dp" 
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">
    </ListView>

    
    <LinearLayout
   	    android:orientation="horizontal"
   	    android:background="#00000000"
   	    android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
   	    android:layout_width="match_parent"
    	android:layout_height="match_parent" >
  	 <Button
  		android:layout_gravity="bottom"
  		android:layout_weight="1" 
   	    android:onClick="add2mem"
   	    android:clickable="true"
	    android:background="@drawable/selector__button_login"
	    android:textColor="#FFFFFF"
	    android:textSize="18dp"
	    android:gravity="center"
	    android:text="添加到强化 "
	    android:layout_height="40dp"
        android:id="@+id/add2mem"
        android:layout_width="0dp"/>
   	    <Button
  		android:layout_gravity="bottom"
   	    android:layout_marginLeft="20dp"
   	    android:layout_weight="1"  
   	    android:onClick="back"
   	    android:clickable="true"
	    android:background="@drawable/selector__button_login"
	    android:textColor="#FFFFFF"
	    android:textSize="18dp"
	    android:gravity="center"
	    android:text="返回主界面" 
	    android:layout_height="40dp"
        android:id="@+id/back"
        android:layout_width="0dp"/>
   	   
   	</LinearLayout>
    
    

</LinearLayout>
