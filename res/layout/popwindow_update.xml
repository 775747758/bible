<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/update_pop_rounded_layout"
    android:orientation="vertical" >

    <TextView
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="发现新版本"
        android:textColor="#F784A5"
        android:textSize="25dp"
        android:textStyle="bold" />
	<TextView
	    android:id="@+id/version"
	    android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:textSize="18dp"/>
	
	<TextView
	    android:id="@+id/size"
	    android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:textSize="18dp"/>
	
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@drawable/pop_left_textview"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="#F784A5"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/certern"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@drawable/pop_right_textview"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="#F784A5"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/divider_update"
        android:textStyle="bold" />

</RelativeLayout>