<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <include layout="@layout/title_bar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#FFFFFF"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#FFFFFF" >

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:src="@drawable/qwe"
                 />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp" >
			<LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
			    >
            <ImageView
                android:onClick="read"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/read" />
            <TextView
                android:textColor="#000000"
                android:textSize="22dp"
                android:gravity="center"
                android:text="读圣经"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
			</LinearLayout>
            <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
			    >
            <ImageView
                android:onClick="recite"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/recite" />
            <TextView
                android:textColor="#000000"
                android:textSize="22dp"
                android:gravity="center"
                android:text="背圣经"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
			</LinearLayout>

           <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
			    >
            <ImageView
                android:onClick="bibletest"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/test" />
            <TextView
                android:textColor="#000000"
                android:textSize="22dp"
                android:gravity="center"
                android:text="考圣经"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
			</LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />

            <TextView
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="灵修" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />

            <TextView
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="祷告本" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />

            <TextView
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="读经计划" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />
            <TextView
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="笔记" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />

            <TextView
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="书签" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />

            <TextView
                android:clickable="true"
                android:onClick="biblefood"
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="灵粮" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />

            <TextView
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="书籍" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />
            <TextView
                android:onClick="friendscircle"
                android:clickable="true"
                android:textSize="20dp"
                android:textColor="#524A43"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="交通吧" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />
    </LinearLayout>

</LinearLayout>