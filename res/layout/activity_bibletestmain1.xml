<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
     <include layout="@layout/title_bar_bibletestmain1" />

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@color/titleBar"
        android:gravity="center" >
        <TextView
            android:id="@+id/grade" 
            android:paddingTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="100dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/grade_bg" >
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        
        <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
			    >
            <ImageView
                android:onClick="bibleknowledge"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/selector__bibleknowledge" />
            <TextView
                android:textColor="#848484"
                android:layout_marginTop="0dp"
                android:textSize="13dp"
                android:gravity="center"
                android:text="圣经知识"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
			</LinearLayout>
			
        <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
			    >
            <ImageView
                android:onClick="review"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/selector__review" />
            <TextView
                android:textColor="#848484"
                android:layout_marginTop="0dp"
                android:textSize="13dp"
                android:gravity="center"
                android:text="复习经文"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
			</LinearLayout>
			
        <LinearLayout
            android:layout_marginRight="40dp" 
			    android:orientation="vertical"
			    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
			    >
            <ImageView
                android:onClick="rank"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/selector__rank" />
            <TextView
                android:textColor="#848484"
                android:layout_marginTop="0dp"
                android:textSize="13dp"
                android:gravity="center"
                android:text="排行榜"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
			</LinearLayout>
    </LinearLayout>

</LinearLayout>