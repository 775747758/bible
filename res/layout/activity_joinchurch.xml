<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    
    <RelativeLayout 
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >
         <EditText
             android:id="@+id/churchname_et"
             android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="60dp"
        android:hint="教会名称"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/search_church"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />
         
         <TextView
             android:layout_marginRight="5dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
                android:onClick="searchChurch"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/selector__category_item"
                android:clickable="true"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@drawable/selector__recommend_gv_color"
                android:textSize="16dp" />
        
        
    </RelativeLayout>
   
   <!--  <TextView
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <View 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        /> -->

    <ListView
        android:id="@+id/churchs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="@android:color/transparent" />

</LinearLayout>