<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFEF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_lay"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/titleBar"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/currentIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:background="#00000000"
                android:gravity="bottom"
                android:textColor="#30B5D6"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:gravity="bottom"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="75.0dip"
            android:paddingRight="75.0dip"
            android:singleLine="true"
            android:text="经文测试"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <com.todddavies.components.progressbar.ProgressWheel
            android:id="@+id/bts_menu_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            ProgressWheel:barColor="#6A71E5"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barWidth="5dp"
            ProgressWheel:rimColor="#FFFFFF"
            ProgressWheel:rimWidth="5dp"
            ProgressWheel:text=""
            ProgressWheel:textColor="#222222"
            ProgressWheel:textSize="14sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            

               

                <LinearLayout
                    android:id="@+id/selection"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" >

                        <TextView
                            android:paddingBottom="30dp"
                            android:paddingTop="30dp"
                            android:id="@+id/chapter"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:paddingRight="60dp"
                            android:textColor="#333333"
                            android:textSize="18dp" />

                        <TextView
                            android:paddingBottom="30dp"
                            android:paddingTop="30dp"
                            android:id="@+id/answer"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:textColor="#333333"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/scripture1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/text_round_white"
                        android:clickable="true"
                        android:drawableLeft="@drawable/a"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/scripture2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/text_round_white"
                        android:clickable="true"
                        android:drawableLeft="@drawable/b"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/scripture3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/text_round_white"
                        android:clickable="true"
                        android:drawableLeft="@drawable/c"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                </LinearLayout>
       

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/certain"
                android:layout_margin="50dp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/selector__button_login"
                android:clickable="true"
                android:gravity="center"
                android:onClick="certain"
                android:text="确 定"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/again"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector__button_login"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="again"
                    android:text="重新测试"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/continues"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector__button_login"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="continues"
                    android:text="继续测试"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>