<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF8"
    android:orientation="vertical" >

    <include layout="@layout/title_bar_register3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp" >

        <EditText
             android:id="@+id/qq_et"
            android:digits="0123456789"
            android:textColorHint="#B5B4B4"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="填写qq号"
            android:paddingLeft="45dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_2" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="#B5B4B4" />
    </RelativeLayout>
    
   


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="我们将会在您发表说说的时候，默认公开您的qq账号，建议填写正确的qq号，方便 其他人可以联系到您，（如果您不希望公开您的qq账号，可以在下方选择关闭）"
        android:textColor="#B5B4B4" />
    
    <RelativeLayout 
         android:layout_width="match_parent"
        android:layout_height="80dp"
         >
          <TextView
              android:layout_centerVertical="true" 
        android:text="是否公开"
         android:textColor="#8C8984"
        android:textColorHint="#FFFFFF"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
    android:layout_height="50dp"
        />
          
       <ToggleButton
           android:id="@+id/toggle"
           android:layout_width="81dp"
           android:layout_height="35dp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="20dp"
           android:background="@drawable/selector_toggle"
           android:checked="true"
           android:textOff=""
           android:textOn="" />
         
     </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:onClick="returnn"
            android:clickable="true"
            android:layout_weight="1"
            android:id="@+id/category_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/selector__category_item"
            android:cacheColorHint="#00000000"
            android:gravity="center"
            android:text="返回"
            android:textColor="@drawable/selector__recommend_gv_color"
            android:textColorHint="#00000000"
            android:textSize="18dp"
            />

        <TextView
            android:onClick="next"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/selector__category_item"
            android:textColor="@drawable/selector__recommend_gv_color"
            android:cacheColorHint="#00000000"
            android:gravity="center"
            android:text="下一步"
            
            android:textColorHint="#00000000"
            android:textSize="18dp"
             />
    </LinearLayout>

</LinearLayout>