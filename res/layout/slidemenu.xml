<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="fill_parent"
    android:background="#2B2B2B"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="240dip"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="240dip"
            android:layout_height="90dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="70dip"
                android:src="@drawable/admin" />

            <TextView
                android:id="@+id/user"
                android:clickable="true"
                android:onClick="login"
                android:layout_width="240dip"
                android:layout_height="50.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="15.0dip"
                android:textColor="#ff959595"
                android:textSize="25.0sp" />
        </LinearLayout>

       <View
            android:layout_width="240dip"
            android:layout_height="2.0dip"
            android:background="@drawable/ic_shelf_category_divider" />

       

        <TextView
            android:layout_width="240dip"
            android:layout_height="70.0dip"
            android:background="@drawable/selector__slide_item"
            android:clickable="true"
            android:drawableLeft="@drawable/options"
            android:drawablePadding="15.0dip"
            android:gravity="center_vertical"
            android:onClick="option"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:text="设置"
            android:textColor="#ff959595"
            android:textSize="20.0sp" />

        <View
            android:layout_width="240dip"
            android:layout_height="2.0dip"
            android:background="@drawable/ic_shelf_category_divider" />

        <TextView
            android:layout_width="240dip"
            android:layout_height="70.0dip"
            android:background="@drawable/selector__slide_item"
            android:clickable="true"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="15.0dip"
            android:gravity="center_vertical"
            android:onClick="aboutApp"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:text="关于"
            android:textColor="#ff959595"
            android:textSize="20.0sp" />

        <View
            android:layout_width="240dip"
            android:layout_height="2.0dip"
            android:background="@drawable/ic_shelf_category_divider" />

        

       

        <TextView
            android:layout_width="240dip"
            android:layout_height="70.0dip"
            android:background="@drawable/selector__slide_item"
            android:clickable="true"
            android:drawableLeft="@drawable/map"
            android:drawablePadding="15.0dip"
            android:gravity="center_vertical"
            android:onClick="map"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:text="定位"
            android:textColor="#ff959595"
            android:textSize="20.0sp" />
        <View
            android:layout_width="240dip"
            android:layout_height="2.0dip"
            android:background="@drawable/ic_shelf_category_divider" />
        
        <TextView
            android:layout_width="240dip"
            android:layout_height="70.0dip"
            android:background="@drawable/selector__slide_item"
            android:clickable="true"
            android:drawableLeft="@drawable/use_loginr"
            android:drawablePadding="15.0dip"
            android:gravity="center_vertical"
            android:onClick="login"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:text="登陆"
            android:textColor="#ff959595"
            android:textSize="20.0sp" />
        <View
            android:layout_width="240dip"
            android:layout_height="2.0dip"
            android:background="@drawable/ic_shelf_category_divider" />
        
        <TextView
            android:layout_width="240dip"
            android:layout_height="70.0dip"
            android:background="@drawable/selector__slide_item"
            android:clickable="true"
            android:drawableLeft="@drawable/use_loginr"
            android:drawablePadding="15.0dip"
            android:gravity="center_vertical"
            android:onClick="logout"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:text="注销"
            android:textColor="#ff959595"
            android:textSize="20.0sp" />
        <View
            android:layout_width="240dip"
            android:layout_height="2.0dip"
            android:background="@drawable/ic_shelf_category_divider" />
        
        

        <TextView
            android:layout_width="240dip"
            android:layout_height="70.0dip"
            android:background="@drawable/selector__slide_item"
            android:clickable="true"
            android:drawableLeft="@drawable/exit"
            android:drawablePadding="15.0dip"
            android:gravity="center_vertical"
            android:onClick="exit"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:text="退出程序"
            android:textColor="#ff959595"
            android:textSize="20.0sp" />

        <View
            android:layout_width="240dip"
            android:layout_height="2.0dip"
            android:background="@drawable/ic_shelf_category_divider" />
    </LinearLayout>

</ScrollView>